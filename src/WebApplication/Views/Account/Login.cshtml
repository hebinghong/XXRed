@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>广西大学电梯管理系统登录</title>
    <script src="~/app/Scripts/jquery-1.8.3.min.js" type="text/javascript"></script>
    <link href="~/app/Content/themes/login/blue/style.css" rel="stylesheet" type="text/css" />   
    <script src="~/app/libs/js/method/center-plugin.js" type="text/javascript"></script>
    <script src="~/app/Scripts/login.js" type="text/javascript"></script>
    <style type="text/css">
    a{ color:White;}
    </style>
    <script type="text/javascript">
        $(document).ready(function () {
            //alert(111);
            $('#vercode').bind('focus', function () {
                $.post("/UserAccount/GetVerifyCodeSession", {}, function (result) {
                    if (result == "1") {
                        $("#codeimg").click();
                    }
                });
            });
            $("#codeimg").click(function () {
                $(this).attr('src', '@(Url.Action("GetVerifyCode"))?t=' + Math.ceil(Math.random()*10));
            });
        });
        //function initComplete() {
        //    alert(333);

        //}

    </script>
</head>
<body>
<div class="login_main">
		<div class="login_top">
        <div class="login_logo">广西大学电梯管理系统登录</div>
		</div>
		<div class="login_middle">
			<div class="login_middleleft"></div>
			<div class="login_middlecenter">
					<form id="loginForm" action="login.do" class="login_form" method="post">
					<div class="login_user"><input type="text" id="username" maxlength="18"></div>
					<div class="login_pass"><input type="password" id="password" maxlength="18"></div>
					<div class="login_code"><input type="text" id="vercode" maxlength="5" /></div>
                    <div class="login_code_img"><img src="@(Url.Action("GetVerifyCode", new { }))" alt="看不清楚？点击换一个" title="看不清楚？点击换一个" id="codeimg" style="cursor:pointer; margin-top:5px;" align="absmiddle"></div>
					<div class="clear"></div>
					<div class="login_button">
						<div class="login_button_left"><input type="button" onclick="login()"/></div>
						<div class="login_button_right"><input type="reset" value=""/></div>
						<div class="clear"></div>
					</div>
					</form>
					<div class="login_info" style="display:none;width:350px;"></div>
					<div class="login_info2">&nbsp;&nbsp;</div>
			</div>
			<div class="login_middleright"></div>
			<div class="clear"></div>
		</div>
		<div class="login_bottom">
			<div class="login_copyright">版权所有：<a href="http://www.gxu.edu.cn">http://www.gxu.edu.cn</a></div>
		</div>
	</div>
</body>
</html>
